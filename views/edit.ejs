<!-- views/edit.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products</title>
    <script></script>
    <script src="/main.js" defer></script>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Laila:wght@300;400;600&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h2>Edit Product</h2>
    <form class="entry-form" action="/products/<%= product._id %>/edit" method="POST">
        <label for="product">Product Name</label>
        <input type="text" id="product" name="product" value="<%= product.product %>" required>
        
        <label for="description">Description</label>
        <input type="text" id="description" name="description" value="<%= product.description %>" required>
        
        <label for="cost">Cost</label>
        <input type="number" id="cost" name="cost" value="<%= product.cost %>" required>
        
        <label for="retail">Retail</label>
        <input type="number" id="retail" name="retail" value="<%= product.retail %>" required>

        <button class="toggle-page" type="submit">Save Changes</button>
        <a class="cancel-button" href="/">
            <button>Cancel</button>
        </a>
    </form>
    
</body>
</html>