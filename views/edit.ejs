<!-- views/edit.ejs -->
<h2>Edit Product</h2>
<form action="/products/<%= product._id %>/edit" method="POST">
    <label for="product">Product Name</label>
    <input type="text" id="product" name="product" value="<%= product.product %>" required>
    
    <label for="description">Description</label>
    <input type="text" id="description" name="description" value="<%= product.description %>" required>
    
    <label for="cost">Cost</label>
    <input type="number" id="cost" name="cost" value="<%= product.cost %>" required>
    
    <label for="retail">Retail</label>
    <input type="number" id="retail" name="retail" value="<%= product.retail %>" required>

    <button type="submit">Save Changes</button>
</form>